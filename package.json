{
  "name": "SignalsMaster",
  "version": "0.0.1",
  "author": "Ionic Framework",
  "homepage": "https://ionicframework.com/",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:prod": "ng build --configuration production",
    "watch": "ng build --watch --configuration development",
    "lint": "ng lint",
    "emulator:start": "firebase emulators:start",
    "deploy:hosting": "npm run build:prod && firebase deploy --only hosting",
    "deploy:preview": "npm run build:prod && firebase hosting:channel:deploy preview",
    "deploy:rules": "firebase deploy --only firestore:rules",
    "serve:emulator": "firebase emulators:start --only firestore,hosting",
    "serve:with-emulators": "concurrently \"npm run emulator:start\" \"npm start\"",
    "commit": "powershell -ExecutionPolicy Bypass -File scripts/git-commit-push.ps1",
    "commit:push": "powershell -ExecutionPolicy Bypass -File scripts/git-commit-push.ps1 -Push",
    "commit:preview": "powershell -ExecutionPolicy Bypass -File scripts/git-commit-push.ps1 -WhatIf",
    "test:unit": "jest --maxWorkers=1",
    "test:component": "jest --maxWorkers=1 --testPathPattern=\\.test\\.tsx$",
    "test:e2e": "playwright test --workers=1",
    "test:all": "powershell -ExecutionPolicy Bypass -File scripts/test-before-push.ps1",
    "test:preview": "powershell -ExecutionPolicy Bypass -File scripts/test-before-push.ps1 -WhatIf",
    "test:no-e2e": "powershell -ExecutionPolicy Bypass -File scripts/test-before-push.ps1 -NoE2E",
    "prepare": "husky"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^20.3.14",
    "@angular/common": "^20.3.14",
    "@angular/compiler": "^20.3.14",
    "@angular/core": "^20.3.14",
    "@angular/fire": "^20.0.1",
    "@angular/forms": "^20.3.14",
    "@angular/platform-browser": "^20.3.14",
    "@angular/platform-browser-dynamic": "^20.3.14",
    "@angular/router": "^20.3.14",
    "@capacitor/app": "7.1.0",
    "@capacitor/core": "7.4.4",
    "@capacitor/haptics": "^7.0.2",
    "@capacitor/ios": "7.4.4",
    "@capacitor/keyboard": "^7.0.3",
    "@capacitor/status-bar": "^7.0.3",
    "@ionic/angular": "^8.0.0",
    "firebase": "^11.10.0",
    "ionicons": "^7.0.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^20.3.12",
    "@angular-eslint/builder": "^20.0.0",
    "@angular-eslint/eslint-plugin": "^20.0.0",
    "@angular-eslint/eslint-plugin-template": "^20.0.0",
    "@angular-eslint/schematics": "^20.0.0",
    "@angular-eslint/template-parser": "^20.0.0",
    "@angular/cli": "^20.3.12",
    "@angular/compiler-cli": "^20.3.14",
    "@angular/language-service": "^20.3.14",
    "@capacitor/cli": "7.4.4",
    "@ionic/angular-toolkit": "^12.0.0",
    "@playwright/test": "^1.57.0",
    "@testing-library/angular": "^17.4.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.14",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "autoprefixer": "^10.4.22",
    "eslint": "^9.16.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsdoc": "^48.2.1",
    "eslint-plugin-prefer-arrow": "1.2.2",
    "firebase-tools": "^14.26.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18",
    "ts-jest": "^29.4.5",
    "typescript": "~5.9.0"
  },
  "description": "An Ionic project"
}
